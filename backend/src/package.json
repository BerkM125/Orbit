{
  "name": "socketio-chat-server",
  "version": "1.0.0",
  "description": "Real-time chat server using Express and Socket.IO for Google Cloud Functions",
  "main": "index.js",
  "scripts": {
    "start": "functions-framework --target=chatServer",
    "dev": "functions-framework --target=chatServer --port=8080",
    "build": "npm run clean && npm run copy-files && npm run install-prod",
    "build:bundle": "npm run clean && webpack --mode production",
    "build:docker": "docker build -t socketio-chat .",
    "clean": "rimraf dist",
    "copy-files": "mkdir -p dist && cp index.js dist/ && cp package.json dist/",
    "install-prod": "cd dist && npm install --only=production",
    "prebuild": "npm install",
    "deploy": "gcloud functions deploy chat-server --runtime nodejs18 --trigger-http --allow-unauthenticated --entry-point=chatServer",
    "deploy:source": "gcloud functions deploy chat-server --source=dist --runtime nodejs18 --trigger-http --allow-unauthenticated --entry-point=chatServer",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^3.3.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "socket.io": "^4.7.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0",
    "rimraf": "^5.0.5",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-loader": "^9.1.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "socket.io",
    "express",
    "chat",
    "real-time",
    "websocket",
    "google-cloud-functions"
  ],
  "author": "Your Name",
  "license": "MIT"
}